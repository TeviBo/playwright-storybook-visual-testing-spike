{
  "name": "playwright-storybook-visual-testing-spike",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "visual-tests:local": "npx playwright test tests/visual/visual-testing.spec.ts",
    "visual-tests:ci": "npm run build-storybook && npx playwright test tests/visual/visual-testing.spec.ts --reporter=line,allure-playwright,html",
    "visual-tests:update-baselines": "UPDATE_BASELINES=true npm run visual-tests:local",
    "visual-tests:serve": "npx http-server storybook-static -p 6006",
    "reports:allure": "npx allure generate tests/reports/allure-results --output tests/reports/allure-report --clean && npx allure open tests/reports/allure-report",
    "reports:playwright": "npx playwright show-report tests/reports/playwright-html"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-a11y": "^9.1.9",
    "@storybook/addon-docs": "^9.1.9",
    "@storybook/addon-vitest": "^9.1.9",
    "@storybook/react-vite": "^9.1.9",
    "@types/node": "^24.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "aws-sdk": "^2.1692.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.9",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "minio": "^8.0.6",
    "playwright": "^1.55.1",
    "storybook": "^9.1.9",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "winston": "^3.18.3"
  }
}
