# Visual Testing Configuration
# Copy this file to .env for local development

# Storage Provider: 'minio' for local development, 's3' for production
STORAGE_PROVIDER=minio

# Storage Bucket Name
STORAGE_BUCKET=storybook-visual-tests-screenshots

# MinIO Configuration (for local development)
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9001
STORAGE_USE_SSL=false
STORAGE_ACCESS_KEY=esteban
STORAGE_SECRET_KEY=bobbiesi796

# S3 Configuration (for production/CI)
# STORAGE_ACCESS_KEY=your-s3-access-key
# STORAGE_SECRET_KEY=your-s3-secret-key
# AWS_REGION=us-east-1

# Visual Testing Thresholds
VISUAL_THRESHOLD=0.2
MAX_DIFF_PIXELS=100

# Logging Configuration
LOG_LEVEL=info

# Storybook Configuration
STORYBOOK_URL=http://192.168.0.40:6006/?path=/docs/configure-your-project--docs

# Test Configuration
UPDATE_BASELINES=false

# CI Configuration
CI=false
NODE_ENV=development